{
  "extends": "@quark/tsconfig/tsconfig.react-app.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "quark/*": ["../../packages/ui/src/*"],
    }
  },
  "files": ["vite.config.ts"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts*",
    "**/*.spec.ts*",
    "**/*.stories.tsx",
    "src/**/test",
    "src/**/__tests__"
  ],
}
