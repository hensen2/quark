{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true, // only on by default for bundler
    // true by default for target>=ES2022; "useDefineForClassFields": true,
    // true by default; "forceConsistentCasingInFileNames": true,
    // true by default with verbatimModuleSyntax; "isolatedModules": true,

    // Need to check these
    // Vite doesn't include; "esModuleInterop": true,
    // Needs composite; "emitDeclarationOnly": true,
    // "allowJs": true,
    // "pretty": true,
    // "removeComments": false,

    // Set in tsconfig.app.json
    // "noEmit": true,

    // Strict type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitOverride": true
    // "noUncheckedIndexedAccess": true,
    // Needs strict: "exactOptionalPropertyTypes": true,
  }
}
