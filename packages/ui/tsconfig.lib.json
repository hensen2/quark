{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@quark/tsconfig/tsconfig.react-lib.json",
  "compilerOptions": {
    "sourceMap": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/lib.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./src",

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "files": [],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*", "src/**/*.spec.*", "src/**/*.stories.*", "dist/**/*"]
}
