{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@quark/tsconfig/tsconfig.react-lib.json",
  "compilerOptions": {
    "sourceMap": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/lib.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./src",

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "files": [],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*", "src/**/*.spec.*", "dist/**/*"]
}
