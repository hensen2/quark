{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@quark/tsconfig/tsconfig.node22.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"]
    },
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/node.tsbuildinfo"
  },
  "include": ["vite.config.ts"]
}
