{
  "source": ["src/core/colors.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "light-vars.css",
          "format": "css/variables"
        },
        {
          "destination": "dark-vars.css",
          "format": "css/variables",
          "options": {
            "selector": ".dark"
          }
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "buildPath": "build/ts/",
      "files": [
        {
          "destination": "vars.ts",
          "format": "javascript/esm"
        },
        {
          "format": "typescript/module-declarations",
          "destination": "vars.d.ts"
        }
      ]
    }
  }
}
