{
    "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    // "noImplicitAny": true,
    // "typeRoots": ["./src/@types", "./node_modules/", "./node_modules/@types", "types"],
    "types": ["vitest/globals"],
    // "rootDir": "./",
    "noEmit": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    }
  },
  "files": ["vitest.config.ts"],
  "include": ["src", "scripts", "tests", "experimental/cssThemes.ts"], // "docs/", "config/", "playwright.config.ts", "e2e", "integration", "vitest.config.ts"
  "exclude": ["./src/@types"]
}