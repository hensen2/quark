{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // === Language & Environment ===
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "types": [
      "node",
      "storybook",
      "vitest/globals",
      "vitest-browser-react",
      "@vitest/browser/providers/playwright"
    ]
  }
}
